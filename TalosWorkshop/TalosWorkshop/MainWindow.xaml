<Window x:Class="TalosWorkshop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TalosWorkshop"
        mc:Ignorable="d"
        Title="TalosWorkshop" Height="440" Width="260" Icon="/workshop-icon.ico" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button x:Name="usersBtn" Grid.Column="0" Grid.Row="0" Margin="10" Content="Управление пользователями"></Button>
        <Button x:Name="filesBtn" Grid.Column="0" Grid.Row="1" Margin="10" Content="Управление файлмаи"></Button>
        <Button x:Name="messagesBtn" Grid.Column="0" Grid.Row="2" Margin="10" Content="Управление сообщениями"></Button>
    </Grid>
</Window>
